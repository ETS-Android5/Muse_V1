<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Muse" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_h</item>
        <item name="colorPrimaryVariant">@color/blue_h</item>
        <item name="colorOnPrimary">@color/white_muse</item>
        <item name="colorAccent">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black_l</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white_muse</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white_muse</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="colorOnBackground">@color/white_muse</item>
    </style>

    //____________________________________________________________________________________________//

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/selector_textinputbox</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="hintTextColor">@color/selector_textinputbox</item>
    </style>

    //____________________________________________________________________________________________//

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    //____________________________________________________________________________________________//

    <style name="DialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    //____________________________________________________________________________________________//

    <style name="ToolbarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    //____________________________________________________________________________________________//

    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>